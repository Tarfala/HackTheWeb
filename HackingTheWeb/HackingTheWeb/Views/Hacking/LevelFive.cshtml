<br />
<br />
<br />
<div class="row">
    <div class="col-4"></div>
    <div class="col-4">
        <form asp-action="LevelFivePassCheck">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="passWord" class="control-label"></label>
                <input asp-for="passWord" class="form-control" />
                <span asp-validation-for="passWord" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Enter" class="btn btn-primary" />
            </div>
        </form>
        <div>
            <button class="btn btn-danger" onclick="alertHelpOne()">Hint 1</button>
            <button class="btn btn-danger" onclick="alertHelpTwo()">Hint 2</button>
            <button class="btn btn-danger" onclick="Solution()">Solution...</button>
        </div>
    </div>
    <div class="col-4"></div>

</div>




<script>
    function one(val) {
        if (val == 89) {
            document.getElementById("11").style.display = "block";
        } else {
            document.getElementById("11").style.display = "none";
        }
    }
    function two(val) {
        if (val == 50) {
            document.getElementById("22").style.display = "block";
        } else {
            document.getElementById("22").style.display = "none";
        }
    }
    function three(val) {
        if (val.toUpperCase() == "4E") {
            document.getElementById("33").style.display = "block";
        } else {
            document.getElementById("33").style.display = "none";
        }
    }
    function four(val) {
        if (val == 47) {
            document.getElementById("44").style.display = "block";
        } else {
            document.getElementById("44").style.display = "none";
        }
    }
    function five(val) {
        if (val.toUpperCase() == "0D") {
            document.getElementById("55").style.display = "block";
        } else {
            document.getElementById("55").style.display = "none";
        }
    }
    function six(val) {
        if (val.toUpperCase() == "0A") {
            document.getElementById("66").style.display = "block";
        } else {
            document.getElementById("66").style.display = "none";
        }
    }
    function seven(val) {
        if (val.toUpperCase() == "1A") {
            document.getElementById("77").style.display = "block";
        } else {
            document.getElementById("77").style.display = "none";
        }
    }
    function eight(val) {
        if (val.toUpperCase() == "0A") {
            document.getElementById("88").style.display = "block";
        } else {
            document.getElementById("88").style.display = "none";
        }
    }
    function alertHelpOne() {
        alert("Every file-type has a hex signature");
    }
    function alertHelpTwo() {
        alert("Try to find the hex signature for PNG on Google");
    }
    function Solution() {
        alert("Password: PNGHEX!?");
    }
</script>
