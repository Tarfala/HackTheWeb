@model LevelFive
@{
    ViewData["Title"] = "LevelFive";
}
@if (@ViewBag.LevelFive != null)
{
    <div class="alert alert-info alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="close">
            <span aria-hidden="true">&times;</span>
        </button>
        @ViewBag.LevelFive
    </div>
}
<div class="text-center">
    <h4 class="display-4">So far, so good!</h4>
    <p4>This time I got a corrupt image, might be a PNG?</p4>
    <br />
    <input type="text" maxlength="2" size="1" value="xx" onchange="one(this.value)">
    <input type="text" maxlength="2" size="1" value="xx" onchange="two(this.value)">
    <input type="text" maxlength="2" size="1" value="xx" onchange="three(this.value)">
    <input type="text" maxlength="2" size="1" value="xx" onchange="four(this.value)">
    <input type="text" maxlength="2" size="1" value="xx" onchange="five(this.value)">
    <input type="text" maxlength="2" size="1" value="xx" onchange="six(this.value)">
    <input type="text" maxlength="2" size="1" value="xx" onchange="seven(this.value)">
    <input type="text" maxlength="2" size="1" value="xx" onchange="eight(this.value)">
</div>

