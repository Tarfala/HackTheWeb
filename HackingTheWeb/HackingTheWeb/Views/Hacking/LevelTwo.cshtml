@model LevelTwo
@{
    ViewData["Title"] = "LevelTwo";
}
@if (@ViewBag.GuessNumber != null)
{
    <div class="alert alert-info alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="close">
            <span aria-hidden="true">&times;</span>
        </button>
        @ViewBag.GuessNumber
    </div>
}
<br />
<div class="text-center">
    <p4>Login success! Now for the next challenge.</p4>
    <br />
    <p4>I made a guessing game, but someone told me there's a bug in it, can you find it?</p4>
    <p4>The source code is below</p4>

</div>
<br />
<br />
<br />
<div class="row">
    <div class="col-4"></div>
    <div class="col-4">
        <form asp-action="CheckAnswerForLevelTwo">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="numberInput" class="control-label"></label>
                <input asp-for="numberInput" class="form-control" />
                <span asp-validation-for="numberInput" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Enter" class="btn btn-primary" />
            </div>

        </form>
        <div>
            <button class="btn btn-danger" onclick="alertHelpOne()">Hint 1</button>
            <button class="btn btn-danger" onclick="alertHelpTwo()">Hint 2</button>
            <button class="btn btn-danger" onclick="Solution()">Solution...</button>
        </div>
    </div>
    <div class="col-4"></div>

</div>
<br />
<br />
<div class="row">
    <div class="col-8">
        <img src="~/Images/LevelTwo.png" />
    </div>
    <div class="col-4"></div>
</div>

<script>
    function alertHelpOne() {
        alert("Make it catch the exception");
    }
    function alertHelpTwo() {
        alert("Use overflow exception\nAn 'int' can have any whole number between -2147483648 to 2147483647");
    }
    function Solution() {
        alert("Try this:\n 10000000000000000000000");
    }
</script>